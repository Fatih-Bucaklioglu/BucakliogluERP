<Window x:Class="BucakliogluERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bucaklıoğlu ERP Sistemi" 
        Height="768" Width="1366"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Buton Stili -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Başlık Stili -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sol menü -->
            <ColumnDefinition Width="250"/>
            <!-- Ana içerik -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SOL MENÜ -->
        <Border Grid.Column="0" Background="#1A252F">
            <StackPanel>
                <!-- Logo Bölümü -->
                <Border Background="#14A085" 
                        Padding="20" 
                        Margin="10,10,10,20">
                    <StackPanel HorizontalAlignment="Center">
                        <Ellipse Width="80" Height="80" 
                                Fill="#0E7C68" 
                                Margin="0,0,0,10">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="10" 
                                                ShadowDepth="2" 
                                                Opacity="0.5"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock Text="B" 
                                  FontSize="40" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,-70,0,60"/>
                        <TextBlock Text="Bucaklıoğlu" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Saç &amp; Profil &amp; Demir LTD. ŞTİ." 
                                  FontSize="10" 
                                  Foreground="#BDC3C7"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="ERP Sistemi v2.0" 
                                  FontSize="10" 
                                  Foreground="#14A085"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Menü Butonları -->
                <Button Content="📋 Yeni Sipariş" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="YeniSiparis_Click"
                        Margin="10,5"/>
                <!-- Sol menüde, Logo'dan sonra ilk buton olarak ekleyin -->
                <Button Content="🏠 Dashboard" 
        Click="Dashboard_Click"
        Style="{StaticResource MenuButtonStyle}"
        Margin="10,5"/>
                <!-- Ayrıca Raporlar butonu ekleyin -->
                <Button Content="📊 Raporlar" 
        Click="Raporlar_Click"
        Style="{StaticResource MenuButtonStyle}"
        Margin="10,5"/>
                <Button Content="💰 Cari Hesap" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="CariHesap_Click"
                        Margin="10,5"/>

                <Button Content="📊 Sipariş Geçmişi" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="SiparisGecmisi_Click"
                        Margin="10,5"/>

                <Button Content="👥 Müşteriler" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Musteriler_Click"
                        Margin="10,5"/>

                <Button Content="📦 Stok Yönetimi" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Stok_Click"
                        Margin="10,5"/>

                <Button Content="📈 Muhasebe" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Muhasebe_Click"
                        Margin="10,5"/>

                <Button Content="⚙️ Ayarlar" 
                        Style="{StaticResource MenuButtonStyle}"
                        Click="Ayarlar_Click"
                        Margin="10,5"/>

                <!-- Alt Bilgi -->
                <TextBlock Text="© 2024 Bucaklıoğlu"
                          FontSize="10"
                          Foreground="#7F8C8D"
                          HorizontalAlignment="Center"
                          Margin="0,30,0,5"/>
                <TextBlock Text="Tüm hakları saklıdır"
                          FontSize="9"
                          Foreground="#7F8C8D"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ANA İÇERİK ALANI -->
        <Border Grid.Column="1" Background="#ECF0F1" Padding="20">
            <Frame x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Border>
    </Grid>
</Window>