<Window x:Class="BucakliogluERP.Views.HtmlPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yazdırma Önizleme" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="15">
            <StackPanel Orientation="Horizontal">
                <Button Content="🖨️ Yazdır" 
                       Click="Yazdir_Click"
                       Background="#27AE60"
                       Foreground="White"
                       Padding="20,10"
                       Margin="0,0,10,0"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       Cursor="Hand"/>

                <Button Content="💾 HTML Kaydet" 
                       Click="HtmlKaydet_Click"
                       Background="#3498DB"
                       Foreground="White"
                       Padding="20,10"
                       Margin="0,0,10,0"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       Cursor="Hand"/>

                <Button Content="🔄 Yenile" 
                       Click="Yenile_Click"
                       Background="#95A5A6"
                       Foreground="White"
                       Padding="20,10"
                       Margin="0,0,10,0"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       Cursor="Hand"/>

                <Button Content="Kapat" 
                       Click="Kapat_Click"
                       Background="#E74C3C"
                       Foreground="White"
                       Padding="20,10"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- WebBrowser -->
        <WebBrowser Grid.Row="1" 
                   x:Name="webBrowser"
                   Margin="10"/>
    </Grid>
</Window>