<Page x:Class="BucakliogluERP.Views.CariHesapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Cari Hesap"
      Background="Transparent">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Panel: Cari Listesi -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,20,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Cari Hesaplar" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Margin="0,0,0,20"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="600">
                    <ItemsControl x:Name="lstCariHesaplar">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,0,0,10"
                                       Cursor="Hand"
                                       MouseLeftButtonDown="CariSecim_Click">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Musteri}" 
                                                  FontWeight="Bold" 
                                                  FontSize="14"/>
                                        <TextBlock Text="{Binding Telefon}" 
                                                  FontSize="12" 
                                                  Foreground="#6C757D"
                                                  Margin="0,3,0,0"/>
                                        <TextBlock FontSize="13" 
                                                  FontWeight="Bold"
                                                  Margin="0,8,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#28A745"/>
                                                    <Setter Property="Text" Value="{Binding Bakiye, StringFormat=Bakiye: {0:N2} ₺}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding BakiyeNegatif}" Value="True">
                                                            <Setter Property="Foreground" Value="#DC3545"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Sağ Panel: Detay -->
        <Border Grid.Column="1" 
                x:Name="borderDetay"
                Background="White" 
                CornerRadius="10" 
                Padding="30"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock x:Name="txtCariAdi" 
                          Text="Müşteri Adı" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Margin="0,0,0,20"/>

                <!-- Özet Kartlar -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#FFF3CD" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Toplam Borç" 
                                      FontSize="13" 
                                      Foreground="#856404"/>
                            <TextBlock x:Name="txtToplamBorc" 
                                      Text="0,00 ₺" 
                                      FontSize="22" 
                                      FontWeight="Bold"
                                      Foreground="#856404"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" 
                            Background="#D4EDDA" 
                            CornerRadius="10" 
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Toplam Tahsilat" 
                                      FontSize="13" 
                                      Foreground="#155724"/>
                            <TextBlock x:Name="txtToplamAlacak" 
                                      Text="0,00 ₺" 
                                      FontSize="22" 
                                      FontWeight="Bold"
                                      Foreground="#155724"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" 
                            x:Name="borderBakiye"
                            Background="#D1ECF1" 
                            CornerRadius="10" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Bakiye" 
                                      FontSize="13" 
                                      Foreground="#0C5460"/>
                            <TextBlock x:Name="txtBakiye" 
                                      Text="0,00 ₺" 
                                      FontSize="22" 
                                      FontWeight="Bold"
                                      Foreground="#0C5460"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Yeni İşlem -->
                <Border Background="#F8F9FA" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Yeni İşlem Ekle" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cmbIslemTipi" 
                                     Grid.Column="0"
                                     Padding="10" 
                                     Margin="0,0,10,0">
                                <ComboBoxItem Content="Tahsilat" Tag="tahsilat" IsSelected="True"/>
                                <ComboBoxItem Content="Borç" Tag="borc"/>
                            </ComboBox>

                            <TextBox x:Name="txtIslemTutar" 
                                    Grid.Column="1"
                                    Padding="10" 
                                    Margin="0,0,10,0"/>

                            <TextBox x:Name="txtIslemAciklama" 
                                    Grid.Column="2"
                                    Padding="10" 
                                    Margin="0,0,10,0"/>

                            <Button Grid.Column="3"
                                   Content="➕ Ekle" 
                                   Click="IslemEkle_Click"
                                   Background="#28A745"
                                   Foreground="White"
                                   Padding="20,10"
                                   BorderThickness="0"
                                   FontWeight="SemiBold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- İşlem Geçmişi -->
                <StackPanel>
                    <TextBlock Text="İşlem Geçmişi" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Margin="0,0,0,15"/>

                    <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstIslemler">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#DEE2E6" 
                                           BorderThickness="0,0,0,1" 
                                           Padding="15,10">
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Aciklama}" 
                                                          FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Tarih, StringFormat=dd.MM.yyyy HH:mm}" 
                                                          FontSize="12" 
                                                          Foreground="#6C757D"
                                                          Margin="0,3,0,0"/>
                                            </StackPanel>
                                            <TextBlock HorizontalAlignment="Right" 
                                                      FontWeight="Bold"
                                                      FontSize="15">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#DC3545"/>
                                                        <Setter Property="Text" Value="{Binding Tutar, StringFormat=-{0:N2} ₺}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Tip}" Value="tahsilat">
                                                                <Setter Property="Foreground" Value="#28A745"/>
                                                                <Setter Property="Text" Value="{Binding Tutar, StringFormat=+{0:N2} ₺}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Boş Durum -->
        <Border Grid.Column="1" 
                x:Name="borderBos"
                Background="White" 
                CornerRadius="10" 
                Padding="30">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="💰" 
                          FontSize="60" 
                          HorizontalAlignment="Center"
                          Opacity="0.3"/>
                <TextBlock Text="Cari hesap seçin" 
                          FontSize="18" 
                          Foreground="#6C757D"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>