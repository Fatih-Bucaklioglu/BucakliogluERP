<Window x:Class="BucakliogluERP.Views.PrintDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Yazdırma Seçenekleri" 
        Height="300" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <StackPanel Margin="30">
        <TextBlock Text="Yazdırma Formatı Seçin" 
                  FontSize="20" 
                  FontWeight="Bold"
                  Margin="0,0,0,20"/>

        <Button Content="A4 Format (Detaylı)" 
               Click="A4_Click"
               Padding="15"
               Margin="0,0,0,10"
               FontSize="14"/>

        <Button Content="A5 Format (Kompakt)" 
               Click="A5_Click"
               Padding="15"
               Margin="0,0,0,10"
               FontSize="14"/>

        <Button Content="İptal" 
               Click="Cancel_Click"
               Padding="15"
               FontSize="14"/>
    </StackPanel>
</Window>