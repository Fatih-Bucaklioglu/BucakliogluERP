<Window x:Class="BucakliogluERP.Views.UrunEkleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ürün Ekle/Düzenle" 
        Height="550" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20" 
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock x:Name="txtBaslik"
                      Text="Yeni Ürün Ekle" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      Margin="0,0,0,30"/>

            <!-- Kategori -->
            <TextBlock Text="Kategori" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbKategori" 
                     Padding="12" 
                     FontSize="14"
                     Margin="0,0,0,15">
                <ComboBoxItem Content="Profil" Tag="profil"/>
                <ComboBoxItem Content="Boru" Tag="boru"/>
                <ComboBoxItem Content="Saç" Tag="sac"/>
                <ComboBoxItem Content="Hırdavat" Tag="hirdavat"/>
                <ComboBoxItem Content="Lema" Tag="lema"/>
            </ComboBox>

            <!-- Ürün Adı -->
            <TextBlock Text="Ürün Adı" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtUrunAdi" 
                    Padding="12" 
                    FontSize="14"
                    Margin="0,0,0,15"/>

            <!-- Ebat/Özellik -->
            <TextBlock Text="Ebat/Özellik" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtEbat" 
                    Padding="12" 
                    FontSize="14"
                    Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Minimum Stok -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Minimum Stok" 
                              FontSize="13" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="txtMinimumStok" 
                            Padding="12" 
                            FontSize="14"
                            Text="10"/>
                </StackPanel>

                <!-- Birim -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Birim" 
                              FontSize="13" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbBirim" 
                             Padding="12" 
                             FontSize="14">
                        <ComboBoxItem Content="Adet" IsSelected="True"/>
                        <ComboBoxItem Content="Kg"/>
                        <ComboBoxItem Content="Metre"/>
                        <ComboBoxItem Content="M²"/>
                        <ComboBoxItem Content="Ton"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Birim Fiyat -->
            <TextBlock Text="Birim Fiyat (₺)" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtBirimFiyat" 
                    Padding="12" 
                    FontSize="14"
                    Margin="0,0,0,30"/>

            <!-- Butonlar -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                       Content="İptal" 
                       Click="Iptal_Click"
                       Background="#E74C3C"
                       Foreground="White"
                       Padding="15,12"
                       Margin="0,0,10,0"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1"
                       Content="Kaydet" 
                       Click="Kaydet_Click"
                       Background="#27AE60"
                       Foreground="White"
                       Padding="15,12"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>