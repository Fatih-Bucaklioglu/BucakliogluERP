<Page x:Class="BucakliogluERP.Views.AyarlarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ayarlar"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="30"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Ayarlar" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,30"/>
                    <!-- Ayarlar sayfasının altına ekleyin -->
<Border BorderBrush="#DEE2E6" 
       BorderThickness="0,0,0,1" 
       Padding="0,0,0,20"
       Margin="0,0,0,20">
    <StackPanel>
        <TextBlock Text="Firma Bilgileri Düzenle" 
                  FontSize="18" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"/>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Firma Adı:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFirmaAdi" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Telefon:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtFirmaTelefon" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="E-posta:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtFirmaEmail" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Adres:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtFirmaAdres" Padding="8" Margin="0,5" Height="60" TextWrapping="Wrap"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Vergi No:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtVergiNo" Padding="8" Margin="0,5"/>
        </Grid>

        <Button Content="💾 Ayarları Kaydet" 
               Click="AyarlariKaydet_Click"
               Background="#3498DB"
               Foreground="White"
               Padding="20,10"
               Margin="0,15,0,0"
               BorderThickness="0"
               FontWeight="SemiBold"
               HorizontalAlignment="Left"/>
    </StackPanel>
</Border>

<!-- E-posta Ayarları -->
<Border BorderBrush="#DEE2E6" 
       BorderThickness="0,0,0,1" 
       Padding="0,0,0,20"
       Margin="0,0,0,20">
    <StackPanel>
        <TextBlock Text="E-posta Gönderim Ayarları" 
                  FontSize="18" 
                  FontWeight="Bold"
                  Margin="0,0,0,15"/>
        
        <CheckBox x:Name="chkEmailAktif" 
                 Content="E-posta gönderimini aktif et"
                 Margin="0,0,0,10"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="SMTP Sunucu:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtSmtpServer" Text="smtp.gmail.com" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtSmtpPort" Text="587" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="E-posta:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtSmtpEmail" Padding="8" Margin="0,5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Şifre:" VerticalAlignment="Center" Margin="0,5"/>
            <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="txtSmtpSifre" Padding="8" Margin="0,5"/>
        </Grid>

        <TextBlock Text="⚠️ Gmail kullanıyorsanız 'Uygulama Şifresi' oluşturmanız gerekir." 
                  FontSize="11" 
                  Foreground="#DC3545"
                  Margin="0,10,0,0"/>
    </StackPanel>
</Border>
                    <!-- Firma Bilgileri -->
                    <Border BorderBrush="#DEE2E6" 
                           BorderThickness="0,0,0,1" 
                           Padding="0,0,0,20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Firma Bilgileri" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,15"/>
                            <TextBlock Text="Bucaklıoğlu Saç &amp; Profil &amp; Demir LTD. ŞTİ." 
                                      FontSize="16" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="ERP Sistemi v2.0" 
                                      FontSize="14" 
                                      Foreground="#6C757D"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Veri Yönetimi -->
                    <Border BorderBrush="#DEE2E6" 
                           BorderThickness="0,0,0,1" 
                           Padding="0,0,0,20"
                           Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Veri Yönetimi" 
                                      FontSize="18" 
                                      FontWeight="Bold"
                                      Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Content="💾 Yedek Al" 
                                       Click="YedekAl_Click"
                                       Background="#3498DB"
                                       Foreground="White"
                                       Padding="20,10"
                                       Margin="0,0,10,0"
                                       BorderThickness="0"
                                       FontWeight="SemiBold"/>

                                <Button Content="📂 Yedek Yükle" 
                                       Click="YedekYukle_Click"
                                       Background="#27AE60"
                                       Foreground="White"
                                       Padding="20,10"
                                       Margin="0,0,10,0"
                                       BorderThickness="0"
                                       FontWeight="SemiBold"/>

                                <Button Content="🗑️ Tüm Verileri Sil" 
                                       Click="VerileriSil_Click"
                                       Background="#DC3545"
                                       Foreground="White"
                                       Padding="20,10"
                                       BorderThickness="0"
                                       FontWeight="SemiBold"/>
                            </StackPanel>

                            <TextBlock x:Name="txtVeriYolu" 
                                      Text="Veri Konumu: Yükleniyor..." 
                                      FontSize="12" 
                                      Foreground="#6C757D"
                                      Margin="0,15,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- İstatistikler -->
                    <StackPanel>
                        <TextBlock Text="İstatistikler" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Background="#E3F2FD" 
                                    CornerRadius="8" 
                                    Padding="20"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Siparişler" 
                                              FontSize="13" 
                                              Foreground="#1976D2"/>
                                    <TextBlock x:Name="txtSiparisSayisi" 
                                              Text="0" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="#1976D2"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                    Background="#E8F5E9" 
                                    CornerRadius="8" 
                                    Padding="20"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Müşteriler" 
                                              FontSize="13" 
                                              Foreground="#388E3C"/>
                                    <TextBlock x:Name="txtMusteriSayisi" 
                                              Text="0" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="#388E3C"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                    Background="#FFF3E0" 
                                    CornerRadius="8" 
                                    Padding="20"
                                    Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Ürünler" 
                                              FontSize="13" 
                                              Foreground="#F57C00"/>
                                    <TextBlock x:Name="txtUrunSayisi" 
                                              Text="0" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="#F57C00"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="3" 
                                    Background="#F3E5F5" 
                                    CornerRadius="8" 
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Cari Hesaplar" 
                                              FontSize="13" 
                                              Foreground="#7B1FA2"/>
                                    <TextBlock x:Name="txtCariSayisi" 
                                              Text="0" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="#7B1FA2"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>