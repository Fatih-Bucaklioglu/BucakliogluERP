<Page x:Class="BucakliogluERP.Views.StokPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Stok Yönetimi"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık ve Butonlar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Stok Yönetimi" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="#2C3E50"
                          VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="➕ Yeni Ürün Ekle" 
                           Click="YeniUrun_Click"
                           Background="#27AE60"
                           Foreground="White"
                           Padding="15.8"
                           Margin="0,0,10,0"
                           BorderThickness="0"
                           FontWeight="SemiBold"/>

                    <Button Content="📥 Giriş Yap" 
                           Click="StokGirisi_Click"
                           Background="#3498DB"
                           Foreground="White"
                           Padding="15,8"
                           Margin="0,0,10,0"
                           BorderThickness="0"
                           FontWeight="SemiBold"/>

                    <Button Content="📤 Çıkış Yap" 
                           Click="StokCikisi_Click"
                           Background="#E74C3C"
                           Foreground="White"
                           Padding="15,8"
                           Margin="0,0,10,0"
                           BorderThickness="0"
                           FontWeight="SemiBold"/>

                    <Button Content="📊 Excel Export" 
                           Click="ExcelExport_Click"
                           Background="#14A085"
                           Foreground="White"
                           Padding="15,8"
                           BorderThickness="0"
                           FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <!-- Özet Kartlar -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📦 Toplam Ürün" 
                                  FontSize="13" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="txtToplamUrun" 
                                  Text="0" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="⚠️ Kritik Stok" 
                                  FontSize="13" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="txtKritikStok" 
                                  Text="0" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#E74C3C"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="💰 Toplam Değer" 
                                  FontSize="13" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="txtToplamDeger" 
                                  Text="0,00 ₺" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#27AE60"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📈 Bu Ay Hareket" 
                                  FontSize="13" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="txtAylikHareket" 
                                  Text="0" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#3498DB"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Stok Tablosu -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Arama ve Filtre -->
                    <Grid Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txtArama" 
                                    Padding="10" 
                                    Width="300"
                                    Margin="0,0,10,0"
                                    TextChanged="TxtArama_TextChanged"/>
                            <Button Content="🔍 Ara" 
                                   Background="#3498DB"
                                   Foreground="White"
                                   Padding="15,8"
                                   BorderThickness="0"
                                   FontWeight="SemiBold"
                                   Margin="0,0,10,0"/>

                            <ComboBox x:Name="cmbKategoriFiltre" 
                                     Padding="10" 
                                     Width="150"
                                     SelectionChanged="CmbKategoriFiltre_SelectionChanged">
                                <ComboBoxItem Content="Tüm Kategoriler" Tag="" IsSelected="True"/>
                                <ComboBoxItem Content="Profil" Tag="profil"/>
                                <ComboBoxItem Content="Boru" Tag="boru"/>
                                <ComboBoxItem Content="Saç" Tag="sac"/>
                                <ComboBoxItem Content="Hırdavat" Tag="hirdavat"/>
                                <ComboBoxItem Content="Lema" Tag="lema"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox x:Name="chkSadeceKritik" 
                                 Content="Sadece Kritik Stok" 
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Checked="ChkSadeceKritik_Changed"
                                 Unchecked="ChkSadeceKritik_Changed"/>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgStoklar" 
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             HeadersVisibility="Column"
                             GridLinesVisibility="Horizontal"
                             RowHeight="45"
                             FontSize="13"
                             Height="500">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kategori" 
                                              Binding="{Binding Kategori}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Ürün Adı" 
                                              Binding="{Binding UrunAdi}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Ebat/Özellik" 
                                              Binding="{Binding Ebat}" 
                                              Width="150"/>
                            <DataGridTextColumn Header="Mevcut Stok" 
                                              Binding="{Binding MevcutStok}" 
                                              Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding KritikDurum}" Value="True">
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Min. Stok" 
                                              Binding="{Binding MinimumStok}" 
                                              Width="90"/>
                            <DataGridTextColumn Header="Birim" 
                                              Binding="{Binding Birim}" 
                                              Width="80"/>
                            <DataGridTextColumn Header="Birim Fiyat" 
                                              Binding="{Binding BirimFiyat, StringFormat={}{0:N2} ₺}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Toplam Değer" 
                                              Binding="{Binding ToplamDeger, StringFormat={}{0:N2} ₺}" 
                                              Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#27AE60"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="İşlemler" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                   Click="UrunDuzenle_Click"
                                                   Background="#3498DB"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="8,4"
                                                   Margin="0,0,5,0"
                                                   ToolTip="Düzenle"/>
                                            <Button Content="📋" 
                                                   Click="StokHareketleri_Click"
                                                   Background="#14A085"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="8,4"
                                                   Margin="0,0,5,0"
                                                   ToolTip="Hareketler"/>
                                            <Button Content="🗑️" 
                                                   Click="UrunSil_Click"
                                                   Background="#E74C3C"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="8,4"
                                                   ToolTip="Sil"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>