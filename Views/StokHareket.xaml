<Window x:Class="BucakliogluERP.Views.StokHareketDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stok Hareketi" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ECF0F1">

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20" 
            Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock x:Name="txtBaslik"
                      Text="Stok Girişi" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Foreground="#2C3E50"
                      Margin="0,0,0,30"/>

            <!-- Ürün Seçimi -->
            <TextBlock Text="Ürün" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbUrun" 
                     Padding="12" 
                     FontSize="14"
                     Margin="0,0,0,15"
                     SelectionChanged="CmbUrun_SelectionChanged"/>

            <!-- Mevcut Stok Bilgisi -->
            <Border x:Name="borderMevcutStok"
                    Background="#E3F2FD" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,0,15"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock FontSize="13" Foreground="#1976D2">
                        <Run Text="Mevcut Stok: "/>
                        <Run x:Name="txtMevcutStok" Text="0" FontWeight="Bold"/>
                        <Run x:Name="txtBirim" Text="Adet"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Miktar -->
            <TextBlock Text="Miktar" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtMiktar" 
                    Padding="12" 
                    FontSize="14"
                    Margin="0,0,0,15"/>

            <!-- Açıklama -->
            <TextBlock Text="Açıklama (Opsiyonel)" 
                      FontSize="13" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtAciklama" 
                    Padding="12" 
                    FontSize="14"
                    Height="80"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,30"/>

            <!-- Butonlar -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                       Content="İptal" 
                       Click="Iptal_Click"
                       Background="#E74C3C"
                       Foreground="White"
                       Padding="15,12"
                       Margin="0,0,10,0"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1"
                       x:Name="btnKaydet"
                       Content="Kaydet" 
                       Click="Kaydet_Click"
                       Background="#27AE60"
                       Foreground="White"
                       Padding="15,12"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>